<style>
    :root {
        /* Docker Hub MCP Color Scheme */
        --docker-primary: #0db7ed;
        --docker-primary-dark: #0099e0;
        --docker-primary-light: #4dd4f7;
        --docker-bg-dark: #0a0a0a;
        --docker-bg-card: #111111;
        --docker-bg-hover: #1a1a1a;
        --docker-border: #2a2a2a;
        --docker-text-primary: #ffffff;
        --docker-text-secondary: #b3b3b3;
        --docker-text-muted: #666666;
    }

    .docker-header {
        background: rgba(10, 10, 10, 0.9);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--docker-border);
    }

    .text-gradient {
        background: linear-gradient(135deg, var(--docker-primary), var(--docker-primary-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .nav-link {
        color: var(--docker-text-primary);
        transition: all 0.3s ease;
        position: relative;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--docker-primary), var(--docker-primary-light));
        transition: width 0.3s ease;
    }

    .nav-link:hover {
        color: var(--docker-primary);
    }

    .nav-link:hover::after {
        width: 100%;
    }

    /* Mobile menu button */
    .mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        color: var(--docker-text-primary);
        cursor: pointer;
        padding: 8px;
    }

    @media (max-width: 768px) {
        .mobile-menu-btn {
            display: block;
        }

        .docker-header {
            padding: 16px 20px;
        }
    }
</style>

<nav class="docker-header p-4 sm:p-6 flex justify-between items-center animate__animated animate__fadeInDown sticky top-0 z-50">
    <div class="flex items-center space-x-3">
        <a href="/" class="flex items-center group">
            <img src="/logo.jpg" alt="GrowUp Logo" class="h-10 sm:h-12 w-auto transform group-hover:scale-110 transition-transform duration-300">
            <span class="ml-2 sm:ml-3 text-xl sm:text-2xl font-bold tracking-tighter text-gradient">GrowUp Computer Training</span>
        </a>
    </div>

    <div class="hidden md:flex space-x-6 lg:space-x-8 text-xs sm:text-sm uppercase tracking-widest font-semibold">
        <a href="/" class="nav-link">Home</a>
        <a href="/#courses" class="nav-link">Courses</a>
        <a href="/contact" class="nav-link">Contact</a>
    </div>

    <!-- Mobile menu button -->
    <button class="mobile-menu-btn md:hidden" onclick="toggleMobileMenu()">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>
</nav>

<!-- Mobile menu (hidden by default) -->
<div id="mobileMenu" class="hidden fixed inset-0 bg-docker-bg-dark/95 z-40 md:hidden">
    <div class="flex flex-col items-center justify-center h-full space-y-8 text-lg uppercase tracking-widest font-semibold">
        <a href="/" class="nav-link text-2xl" onclick="toggleMobileMenu()">Home</a>
        <a href="/#courses" class="nav-link text-2xl" onclick="toggleMobileMenu()">Courses</a>
        <a href="/contact" class="nav-link text-2xl" onclick="toggleMobileMenu()">Contact</a>
    </div>
</div>

<script>
    function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('hidden');
    }
</script>